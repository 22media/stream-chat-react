{
  "compilerOptions": {
    "outDir": "./built",
    "allowJs": true,
    "target": "es5",
    "jsx": "react",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "baseUrl": ".",
    "lib": ["es2015", "dom"],
    "paths": {
      "*": ["src/@types/*"]
    }
  },
  "include": ["./src/**/*"]
}
